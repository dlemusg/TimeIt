<div class="container-fluid">
	<%=render 'layouts/header'%>
	<div class="row container-fluid">
		<%=render 'layouts/basicInfo'%>
		<div class="col container-fluid card">
			<div class="container card-header">	  	
				<nav class="navbar navbar-light bg-faded">
					<%=render 'frame/pestanasPrincipales', locals: {variable5: "active"}%>	   
				</nav>	 
			</div>			
			<div class="container card-body">		
				<div class="container card-body">
					<div class="row">
						<div class="col-lg-2">
							<div class="media-body">
								<img width="100" height="100" class="d-flex mr-3" src=<%= @offer.picture %>
								alt="Generic placeholder image">
							</div>
						</div>
						<div class="col-lg-5">
							<div class="media-body">
								<h2 class="mt-0 mb-3"> <%= @offer.name %></h2>
								<%= @offer.description %>
							</div>
						</div>
						<div class="col-lg-2">
						</div>
					</div>
					<button class="navbar-toggler btn btn-secondary float-right" type="button" 
						data-toggle="collapse" href="#collapse1"><span class="navbar-toggler-icon my-toggler">
						</span></button>
					<%= link_to 'Editar', edit_offer_path(@offer) %>
				</div>
			</div>	
		</div>
	</div>
</div>
