<div class="container-fluid">
  <%=render 'layouts/header'%>
<div class="row container-fluid">
  <%=render 'layouts/basicInfo'%>
  <div class="col container-fluid card">
	    <div class="container card-header">	  	
		  	<nav class="navbar navbar-light bg-faded">
		  		<%=render 'pestanasPrincipales', locals: {variable5: "active"}%>	   
			</nav>	 
	    </div>

	<div class="container card-body">
	  
	 <% @ver_oferta_unicas.each do |offer| %> 		 			
			 			<ul class="list-unstyled">
						  <li class="media">
						    <img width="250" height="280" class="d-flex mr-3" src=<%= offer.picture %> alt="Generic placeholder image">
						    <div class="media-body">
						      <h2 class="mt-0 mb-1"><%= offer.name %></h2>			      
						       <h4 class="mt-0 mb-1">Descripcion de la oferta:</h4>	      
						      <%= offer.description %>
						      <div> 
						        <%= render "offers/form2", request: @request, :locals => {:idOffer => offer.id ,:idUser => offer.user_id } %> 
						      </div>
						    </div>
						  </li>
						</ul>			  				  				
				<% end %>


	</div>

</div>

</div>