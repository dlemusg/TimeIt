<div class="container-fluid">
  <%=render 'layouts/header'%>
<div class="row container-fluid">
  <%=render 'layouts/basicInfo'%>
  <div class="col container-fluid card">
	  <div class="container card-header">	  	
			<nav class="navbar navbar-light bg-faded">
		  	<%=render 'pestanasPrincipales', locals: {variable5: "active"}%>	   
			</nav>	 
		</div>

		<div class="container card-body">
			<% @ver_oferta_unicas.each do |offer| %>
          <% if offer.state   %>
            <ul class="list-unstyled">
              <div class="row">
                <div class="col-lg-4">
                  <div class="media-body">
                      <img width="200" height="200" class="d-flex mr-3" src=<%= offer.picture %>
                      alt="Generic placeholder image">
                  </div>
                </div>
                <div class="col-lg-5">
                  <div class="media-body">
                    <h2 class="mt-0 mb-0"> <%= offer.name %></h2>
                    <h6 class="mt-0 mb-3"><%= offer.description %></h6>
                    <h2 class="mt-0 mb-0"><%= offer.state%></h2>
                  </div>
                </div>
                <div class="col-lg-3">
                  <%= link_to "Ver mas", offer,
                    :class => "btn btn-outline-primary float-right" %>
                </div>
              </div>
            </ul>
          <% end %>
			<% end %>
		</div>
	</div>
