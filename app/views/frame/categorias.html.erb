<div class="container-fluid">
  <%=render 'layouts/header'%>
<div class="row container-fluid">
  <%=render 'layouts/basicInfo'%>
  <div class="col container-fluid card">
	    <div class="container card-header">	  	
		  	<nav class="navbar navbar-light bg-faded">
		  		<%=render 'layouts/pestanasPrincipales', locals: {variable3: "active"}%>	   
			</nav>	 
	    </div>
	  <div class="container card-body">
	  
	  <div class="row">	  	
	  	<% @categories.each do |category| %>  
	  		<div class="card" style="width: 20rem;">
			  <img width="150" height="200" class="card-img-top" src=<%= category.imagen %> alt="Card image cap">
			  <div class="card-body">
			    <h4 class="card-title"><%= category.name %></h4>
			    <p class="card-text"> <%= category.descripcion%> </p>				    
			    <%= link_to 'Ver Ofertas', frame_verOfertas_path(:cate => category.id), :class => "btn btn-outline-primary" %>			    
			  </div>
			</div> 			
		<% end %>
				
	  </div>	

	  </div>
	</div>

</div>

</div>