  <body>
      <div class="wrapper">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
    <%= devise_error_messages! %>
     <%= stylesheet_link_tag "application", :media => "all" %>
     <form>

      <h2 class="form-signup-heading">Modificar Perfil</h2>

      <div class="form-group">
  <%= f.label :Correo_electrónico %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control',required:true%> 
   </div>

   <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

  <div class="form-row">

       <div class="form-group col-md-6">
     <%= f.label :Contraseña %> <i></i>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control'%>
          </div>

        <div class="form-group col-md-6">
        <%= f.label :Confirmación_de_contraseña %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'%>
        </div>
     </div>  


     <div class="form-row">
      <div class="form-group col-md-6">
     <%= f.label :Teléfono %><br />
    <%= f.text_field :tel, autofocus: false,class: 'form-control'%>
        </div>
      <div class="form-group col-md-6">
               <%= f.label :Celular %><br />
    <%= f.text_field :cel, autofocus: false, class: 'form-control'%>
      </div>
    </div>  


     <div class="form-row">
     <div class="form-group col-md-6">
      <%= f.label :Lugar_de_residencia %><br />
    <%= f.select :location, options_for_select(Barbosa: "Barbosa", Girardota: "Girardota", Copacabana: "Copacabana", Bello: "Bello", Medellín: "Medellín", itagüi: "itagüi", Envigado: "Envigado", Sabaneta: "Sabaneta", "La Estrella": "La Estrella", Caldas: "Caldas"),{},{:class=> 'form-control'}%>

        </div>
      <div class="form-group col-md-6">
      <%= f.label :Dirección %><br />
    <%= f.text_field :direccion, autofocus: false, class: 'form-control'%>
      </div>
    </div>  

    <div class="form-group">
    <%= f.label :Descripcion_general %><br />
     <%= f.text_area :description, autofocus: false, class: 'form-control',maxlength: 100, placeholder: 'Maximo 100 letras' %>
  </div>


  <div class="form-row">
         <div class="form-group col-md-12">
        <%= f.label :Contraseña_actual%><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control'%>
        </div>
        </div>
<!--
       <div class="actions">
      <%= f.submit "Update" %>
    </div>
-->
<%= f.button "Actualizar", class: 'btn btn-lg btn-primary btn-block' %>
  

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  </form>
    </div>
     <% end %>
  </body>

  <%= link_to "Volver", :back %>

   
   