<body>
  
    <div class="wrapper">
  
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
         html: { method: :post, class: "form-signin" }) do |f| %>
        
  
  
          <h2 class="form-signin-heading">¿Olvido su contraseña?</h2>
          <%= devise_error_messages! %>
          
          <%= f.label :email, 'Correo', class: 'sr-only' %>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Correo' %>
            <label>
              
              
            </label>
  
  
  
              <%= f.button "Enviar restablecimiento", class: 'btn btn-lg btn-primary btn-block' %>
                <%= render "users/shared/links" %>
      <% end %>
    </div>
